@{
    Layout = "_Layout";
}

<div>
    <div>
        <nav>
            @await RenderSectionAsync("DocumentNavigation", false)
        </nav>

        <style>
            me {
                height: 100%;
                width: 300px;
                font-family: "EB Garamond", serif;
                text-wrap: balance;
                position: relative;
                
                nav {
                    position: fixed;
                    width: 300px;
                    overflow-y: auto;
                    top: 4.5rem;
                    left: 0;
                    bottom: 0;
                    padding: 1.5rem;
                    padding-right: 0;
                    padding-top: 0.25rem;
                    
                    h1 {
                        font-size: 20pt;
                        margin-bottom: 1rem;
                    }
                    
                    ol, ul {
                        list-style-position: outside;
                        list-style-type: decimal;
                        margin-left: 2rem; 
                        font-size: 13pt;
                        line-height: 15pt;
                        
                        li {
                            margin-bottom: 5pt;
                            padding-left: 3pt;
                        }
                    }
                    
                    a {
                        color: black;
                        text-decoration: none;
                    }
                    
                    a:hover {
                        text-decoration: underline;
                    }
                }              
            }
        </style>
    </div>

    <div>
        @await RenderSectionAsync("DocumentContent", true)
        
        <style>
            me {
                height: 100%;
                width: 800px;
                padding: 1rem;
                padding-left: 5rem;
                padding-right: 5rem;
                padding-top: 0;
                font-size: 16pt;
                line-height: 19pt;
                font-family: "EB Garamond", serif;                
                
                br {
                    height: 1rem;
                }
                
                h1 {
                    text-wrap: balance;
                    font-size: 25pt;
                    line-height: 27pt;
                    font-weight: 550;
                    margin-bottom: 2pt;
                }
                
                h2 {
                    text-wrap: balance;
                    font-size: 20pt;
                    line-height: 22pt;
                    font-weight: 550;
                    margin-bottom: 2pt;
                }
                
                h3 {
                    text-wrap: balance;
                    font-size: 16pt;
                    line-height: 18pt;
                    font-style: italic;
                }
                
                h4 {
                    text-align: center;
                    font-weight: bold;
                    margin-bottom: 5pt;
                }
                
                ul, ol {
                    list-style-position: outside;
                    list-style-type: lower-roman;                   
                    margin-left: -5pt;
                    
                    li {
                        padding-left: 5pt;
                        margin-bottom: 1rem;
                    }
                    
                    li::marker {
                        font-weight: bold;
                    }
                }
                
                table {
                    width: 100%;                    
                    text-align: center;
                    font-style: italic;
                    table-layout: fixed;             
                }
            }
        </style>
    </div>

    <div class="details">
        @await RenderSectionAsync("DocumentDetails", false)
        
        <style>
            me {
                height: 100%;
                width: 300px;
                border-radius: 6px;
                margin-top: 0.5rem;
                font-size: 13pt;
                line-height: 15pt;
                font-family: "EB Garamond", serif;     
                text-wrap: balance;
                
                h1 {
                    font-size: 20pt;
                    line-height: 22pt;
                    padding: 1rem;
                    padding-top: 0;
                    width: calc(100% - 2rem);
                    text-align: left;
                }
                
                img {
                    width: 100%;
                    margin-bottom: 1rem;
                }
                
                table {
                    margin-left: 1rem;
                    margin-right: 1rem;
                    margin-bottom: 1rem;
                    table-layout: fixed;
                    width: calc(100% - 2rem);
                    
                    tr > td {
                        padding-bottom: 1rem;
                    }
                    
                    tr > td:first-child {
                        font-weight: bold;
                    }
                }
            }
        </style>
    </div>
    
    <style>
        me {
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: row;          
        }
    </style>
</div>