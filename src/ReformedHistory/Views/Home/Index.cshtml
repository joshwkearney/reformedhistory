@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-3 font-weight-bold">Welcome to ReformedHistory</h1>
        <p class="lead text-muted">Providing high-quality, free access to important church documents.</p>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-body p-5">
                    <h2 class="card-title text-center mb-4">Our Mission</h2>
                    <p class="card-text text-justify">
                        At ReformedHistory, we believe in making historical church documents readily available to scholars, researchers, and the general public. Our mission is to preserve and share the rich heritage of the Christian faith by providing free access to a vast collection of important texts.
                    </p>
                    <p class="card-text text-justify">
                        Our collection includes councils, letters, confessions, and other significant texts that have shaped the history of the church. We are committed to ensuring that these documents are easily accessible and well-preserved for future generations.
                    </p>
                    <div class="text-center mt-4">
                        <a class="btn btn-primary btn-lg" href="~/Home/Library" role="button">Explore the Library</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
