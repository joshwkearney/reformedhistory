<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReformedHistory</title>
    
    <!-- Include Tailwind CSS -->
    @*<link rel="stylesheet" href="~/css/tailwind.css" asp-append-version="true" />*@

    <link rel="stylesheet" href="~/css/reset.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400..800;1,400..800&display=swap" rel="stylesheet">

    <!-- This is at the top because it is needed for styles to load correctly -->
    <script src="~/js/css-scope-inline.js" asp-append-version="true"></script>
</head>
<body>
    <div>
        <header>
            <a href="~/">ReformedHistory.com</a>
            <div class="bar"></div>
            <a href="~/Home">Home</a>
            <a href="~/Timeline/">Timeline</a>
            <a href="~/Content/Documents/WestminsterConfession">Westminster Confession</a>
            
            <style>
                me {
                    width: 100%;
                    height: 3.5rem;
                    position: sticky;
                    top: 0;
                    margin-bottom: 1rem;
                    box-shadow: 0px 1px 14px 0px rgba(0,0,0,0.38);
                    display: flex;
                    flex-direction: row;
                    align-items: center;
                    background-color: white;
                    
                    a {
                        font-size: 16pt;
                        line-height: 18pt;
                        font-family: "EB Garamond", serif;   
                        color: black;
                        text-decoration: none;
                        margin-left: 1.5rem;
                    }                    
                
                    a:hover {
                        text-decoration: underline;
                    }
                    
                    a:first-child {
                        margin-left: 2rem;
                    }
                    
                    .bar {
                        height: calc(100% - 2rem);
                        margin-left: 1.5rem;
                        margin-top: 1rem;
                        margin-bottom: 1rem;
                        width: 1px;
                        background-color: black;
                    }
                }
            </style>
        </header>
        <main>
            @RenderBody()
        </main>
        <style>
            me {
                width: 100vw;
                height: 100vw;
                max-width: 100vw;
                max-height: 100vh;
                overflow-y: auto;
                position: relative;
                scroll-padding-top: 4.5rem;
            }
        </style>
    </div>

    <!-- Include the site's javascript -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Include htmx -->
    <script src="~/js/htmx.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>