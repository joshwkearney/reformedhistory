@using ReformedHistory.Common.Services
@inject IdService ids
@{
    Layout = "TripleColumnLayout";

    var tableOfContentsId = ids.GetUniqueId();
    var detailsId = ids.GetUniqueId();
    var contentId = ids.GetUniqueId();
    var titleId = ids.GetUniqueId();
}

@section Title {
    <div id="@titleId">
        @await RenderSectionAsync("Title", false)
    </div>
}

@section Sidebar1 {
    <nav id="@tableOfContentsId">
        <style>
            #@tableOfContentsId {
                font-family: "EB Garamond", serif;
                text-wrap: balance;
                width: auto;
                color: inherit;
                max-width: calc(@CssConstants.MainContentWidth / 2);
                margin-left: auto;
                margin-right: auto;

                h1 {
                    font-size: 20pt;
                    padding-bottom: 1rem;
                    text-align: center;
                    top: 0;
                }

                h2 {
                    font-size: 13pt;
                    line-height: 15pt;
                    font-weight: bold;
                    margin-bottom: 3pt;
                    margin-left: 3pt;
                }

                ol {
                    list-style-position: inside;
                    list-style-type: decimal;
                    font-size: 13pt;
                    line-height: 15pt;

                    li {
                        margin-bottom: 5pt;
                        padding-left: 3pt;
                    }
                }

                a {
                    color: inherit;
                    text-decoration: none;
                }

                a:hover {
                    text-decoration: underline;
                }
            }
        </style>

        @await RenderSectionAsync("DocumentNavigation", false)
    </nav>
}

@section Sidebar2 {
    <div id="@detailsId">
        <style>
            #@detailsId {
                font-size: 13pt;
                line-height: 15pt;
                font-family: "EB Garamond", serif;
                text-wrap: balance;
                width: auto;
                max-width: calc(@CssConstants.MainContentWidth / 2);
                margin-left: auto;
                margin-right: auto;
                
                h1 {
                    font-size: 20pt;
                    line-height: 22pt;
                    padding-bottom: 1rem;
                    width: calc(100% - 2rem);
                    text-align: center;
                }

                img {
                    width: 100%;
                    margin-bottom: 1rem;
                    border-radius: 3px;
                }

                table {
                    margin-bottom: 1rem;
                    table-layout: fixed;
                    width: 100%;
                    
                    tr > td {
                        padding-bottom: 1rem;
                    }

                    tr > td:first-child {
                        font-weight: bold;
                    }
                }
            }
        </style>

        @await RenderSectionAsync("DocumentDetails", false)
    </div>
}

<div id="@contentId">
    <style>
        #@contentId, #@titleId {
            font-size: 16pt;
            line-height: 1.25;
            font-family: "EB Garamond", serif;
            
            br {
                height: 1rem;
            }

            h1 {
                text-wrap: balance;
                font-size: 25pt;
                line-height: 27pt;
                font-weight: 550;
                margin-bottom: 2pt;
            }

            h2 {
                text-wrap: balance;
                font-size: 20pt;
                line-height: 22pt;
                font-weight: 550;
                margin-bottom: 2pt;
            }

            h3 {
                text-wrap: balance;
                font-size: 16pt;
                line-height: 18pt;
                font-style: italic;
            }

            h4 {
                font-weight: bold;
                margin-bottom: 12pt;
            }

            h5 {
                text-align: center;
                font-weight: bold;
                margin-bottom: 5pt;
            }
            
            p {
                text-align: justify;
            }

            ol {
                list-style-position: inside;
                list-style-type: lower-roman;
                
                li  {
                    margin-bottom: 1rem;
                    text-align: justify;
                    
                    h1, h2, h3, h4 {
                        display: inline;
                    }
                }

                li::marker {
                    font-weight: bold;
                }
            }

            ol.decimal {
                list-style-type: decimal;
            }

            table {
                width: 100%;
                text-align: center;
                font-style: italic;
                table-layout: fixed;
            }

            i {
                font-style: italic;
            }

            a {
                color: inherit;
                text-decoration: underline;
                outline: none
            }

            a:hover {
                text-decoration: underline;
            }

            blockquote {
                background-color: rgba(0, 0, 0, 0.075);
                padding: 1rem;
                border-radius: 3px;

                span {
                    line-height: 1.25rem;
                }

                span:before {
                    content: "“";
                    font-size: 25pt;
                    line-height: 1.25rem;
                    font-family: 'times new roman';
                    vertical-align: middle;
                }

                span:after {
                    content: "”";
                    font-size: 25pt;
                    line-height: 1.25rem;
                    font-family: 'times new roman';
                    vertical-align: middle;
                }

                cite:first-of-type {
                    display: block;
                    font-style: italic;
                    margin-top: 1.25rem;
                }

                cite:first-of-type:before {
                    content: '— ';
                }

                cite:last-of-type {
                    font-size: 12pt;
                    display: block;
                    text-align: right;
                    text-wrap: balance;
                }

                @@media (prefers-color-scheme: dark) {
                    background-color: rgba(255, 255, 255, 0.075);
                }
            }
        }
    </style>

    @await RenderSectionAsync("DocumentContent", true)
</div>

<script>
    var refTagger = {
        settings: {
            bibleVersion: 'ESV'
        }
    };

    (function(d, t) {
        var n = d.querySelector('[nonce]');
        refTagger.settings.nonce = n && (n.nonce || n.getAttribute('nonce'));
        var g = d.createElement(t), s = d.getElementsByTagName(t)[0];
        g.src = 'https://api.reftagger.com/v2/RefTagger.js';
        g.nonce = refTagger.settings.nonce;
        s.parentNode.insertBefore(g, s);
    }(document, 'script'));
</script>