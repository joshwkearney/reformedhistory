@{
    Layout = "_Layout";
}

<div>
    <div>
        <div class="navigation">
            @await RenderSectionAsync("DocumentNavigation", false)
        </div>

        <style>
            me {
                height: 100%;
                width: 300px;
                font-family: "EB Garamond", serif;
                text-wrap: balance;
                position: relative;
                
                .navigation {
                    position: fixed;
                    width: 300px;
                    top: 0;
                    left: 0;
                    padding: 1rem;
                }                
                
                h1 {
                    font-size: 20pt;
                    margin-bottom: 1rem;
                }
                
                ol, ul {
                    list-style-position: outside;
                    list-style-type: decimal;
                    margin-left: 2rem; 
                    font-size: 13pt;
                    line-height: 15pt;
                    
                    li {
                        margin-bottom: 5pt;
                        padding-left: 3pt;
                    }
                }
                
                a {
                    color: black;
                    text-decoration: none;
                }
                
                a:hover {
                    text-decoration: underline;
                }
            }
        </style>
    </div>

    <div>
        @await RenderSectionAsync("DocumentContent", true)
        
        <style>
            me {
                height: 100%;
                width: 800px;
                padding: 1rem;
                padding-left: 3rem;
                font-size: 16pt;
                line-height: 18pt;
                font-family: "EB Garamond", serif;                
                
                br {
                    height: 1rem;
                }
                
                h1 {
                    text-wrap: balance;
                    font-size: 25pt;
                    line-height: 27pt;
                    font-weight: 550;
                    margin-bottom: 1rem;
                }
                
                h2 {
                    text-wrap: balance;
                    font-size: 20pt;
                    line-height: 22pt;
                    font-weight: 550;
                }
                
                h3 {
                    text-wrap: balance;
                    font-size: 16pt;
                    line-height: 18pt;
                    font-style: italic;
                }
                
                h4 {
                    text-align: center;
                    font-weight: bold;
                    margin-bottom: 5pt;
                }
                
                ul, ol {
                    list-style-position: outside;
                    list-style-type: decimal;                   
                    margin-left: -5pt;
                    
                    li {
                        padding-left: 5pt;
                        margin-bottom: 1rem;
                    }
                    
                    li::marker {
                        font-weight: bold;
                    }
                }
                
                table {
                    width: 100%;                    
                    text-align: center;
                    font-style: italic;
                    table-layout: fixed;
                    
                    td {
                    }                    
                }
            }
        </style>
    </div>

    <div class="details">
        @await RenderSectionAsync("DocumentDetails", false)
        
        <style>
            me {
                height: 100%;
                background-color: blue;
                width: 300px;
            }
        </style>
    </div>
    
    <style>
        me {
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: row;          
        }
    </style>
</div>