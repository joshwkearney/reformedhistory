@using Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}

<div>
    <div class="NavigationPanel">
        <form hx-post="/Timeline/Content"
              hx-trigger="change"
              hx-target="#Testing"
              hx-swap="innerHTML">
            
            <div class="NavigationPadding">
                <h1>Filters</h1>

                <h2>Tradition</h2>
                <div class="checkbox">
                    <input id="ReformedCheckbox" name="ReformedCheckbox" type="checkbox" checked value="true">
                    <label for="ReformedCheckbox">Reformed</label>
                </div>
                <div class="checkbox">
