                    <label for="AnglicanCheckbox">Anglican</label>
                </div>
                <br/>

                <h2>Type</h2>
                <div class="checkbox">
                    <input id="DocumentCheckbox" name="DocumentCheckbox" type="checkbox" checked value="true">
                    <label for="DocumentCheckbox">Confessions</label>
                </div>
                <div class="checkbox">
                    <input id="LetterCheckbox" name="LetterCheckbox" type="checkbox" checked value="true">
                    <label for="LetterCheckbox">Letters</label>
                </div>
                <div class="checkbox">
                    <input id="CouncilCheckbox" name="CouncilCheckbox" type="checkbox" checked value="true">
                    <label for="CouncilCheckbox">Councils</label>
                </div>
                <div class="checkbox">
                    <input id="SermonCheckbox" name="SermonCheckbox" type="checkbox" checked value="true">
                    <label for="SermonCheckbox">Sermons</label>
                </div>
                <div class="checkbox">
                    <input id="CatechismCheckbox" name="CatechismCheckbox" type="checkbox" checked value="true">
                    <label for="CatechismCheckbox">Catechisms</label>
                </div>
                <br/>

                <h2>Era</h2>
                <div class="checkbox">
                    <input id="ReformationCheckbox" name="ReformationCheckbox" type="checkbox" checked value="true">
                    <label for="ReformationCheckbox">Reformation</label>
                </div>
                <div class="checkbox">
                    <input id="MedievalCheckbox" name="MedievalCheckbox" type="checkbox" checked value="true">
                    <label for="MedievalCheckbox">Medieval</label>
                </div>
                <div class="checkbox">
                    <input id="AncientCheckbox" name="AncientCheckbox" type="checkbox" checked value="true">
                    <label for="AncientCheckbox">Ancient</label>
                </div>
                <br/>
            </div>
        </form>
    </div>

    <div id="Testing" class="ContentPanel">
        <partial name="Content"/>
    </div>
    
